<div class="grid">
    <div class="sub_head">
        <h2 style="margin: 0px;">{{title2}}</h2>
    </div>
    <div class="area2" style="padding-top: 5px;">
        {{#if estado}}
        <label for="addMedico">Agregar {{title}}</label>
        <a name="addMedico" href="pacientes/agregar-medico"><i class="fa fa-plus"></i></a>
        {{/if}}
    </div>
    
</div>
<div class="divTabla">
    <table border="1">
        <thead>
            <tr>
                <th>Cedula</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Especialidad</th>
                <th>Consultorio</th>
                <th>Correo</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each medicos}}
            <tr>
                <form action="/medicos/actualizar/{{cedula_medico}}" method="post">
                    <td><input type="text" id="cedula_medico" name="cedula_medico" value="{{cedula_medico}}" disabled>
                    </td>
                    <td><input type="text" id="nombre_medico" name="nombre_medico" value="{{nombre_medico}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="apellido_medico" name="apellido_medico" value="{{apellido_medico}}"
                            {{#ifCond @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>

                    <td>
                        {{#if ../estado}}
                        <input id="especialidad" name="especialidad" value="{{especialidad}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}>
                        {{else}}
                        <select id="especialidad_1" name="especialidad" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}>
                            <option value="{{especialidad}}">{{especialidad}}</option>
                            <option value="Medicina general">Medicina general</option>
                            <option value="Cardiología">Cardiología</option>
                            <option value="Medicina interna">Medicina interna</option>
                            <option value="Dermatología">Dermatología</option>
                            <option value="Rehabilitación física">Rehabilitación física</option>
                            <option value="Psicología">Psicología</option>
                            <option value="Odontología">Odontología</option>
                            <option value="Radiología">Radiología</option>

                        </select>
                    </td>

                    {{/if}}
                    <td><input type="text" id="consultorio" name="consultorio" value="{{consultorio}}" {{#ifCond
                            @key '!=' ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td><input type="text" id="correo" name="correo" value="{{correo}}" {{#ifCond @key '!='
                            ../claveSeleccionada}}{{../opcion}}{{/ifCond}}></td>
                    <td>
                        <div class="botones">
                            {{#if ../estado}}
                            <a href="/medicos/enviar/{{@key}}" data-bs-toggle="popover" data-bs-placement="bottom"
                                data-bs-trigger="hover focus" data-bs-content="Editar"><i class="fa fa-exchange"
                                    aria-hidden="true"></i></a>
                            <a href="/medicos/eliminar/{{cedula}}" class="cancelar iconos" data-bs-toggle="popover"
                                data-bs-placement="bottom" data-bs-trigger="hover focus" data-bs-content="Elminar"><i
                                    class="fa fa-times"></i></a>
                            {{else}}
                            {{#ifCond @key '==' ../claveSeleccionada}}
                            <button type="submit" data-bs-toggle="popover" data-bs-placement="bottom"
                                data-bs-trigger="hover focus" data-bs-content="Enviar"
                                data-bs-custom-class="custom-popover"><i class="fa fa-check"></i></button>
                            <a href="/medicos" class="cancelar iconos" data-bs-toggle="popover"
                                data-bs-placement="bottom" data-bs-trigger="hover focus" data-bs-content="Cancelar"><i
                                    class="fa fa-times"></i></a>
                            {{/ifCond}}
                            {{/if}}
                        </div>
                    </td>
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>